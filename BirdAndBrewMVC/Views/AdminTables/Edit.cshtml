@model BirdAndBrewMVC.Models.Table

@{
ViewData["Title"] = "Manage Tables";
}
<main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4"><div class="chartjs-size-monitor" style="position: absolute; inset: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Update a Menu Item</h1>

        <div class="btn-toolbar mb-2 mb-md-0">

            <a class="btn btn-primary" asp-controller="AdminMenu" asp-action="Create"> Add New Item </a>

        </div>
    </div>

    <form asp-controller="AdminTables" asp-action="EditPost" method="post">
        <div>
            <input type="hidden" asp-for="Id" name="id" />

            <label asp-for="TableNumber" class="form-label mt-2"></label><br/>
            <input asp-for="TableNumber" class="form-text mt-2"/>
            <span asp-validation-for="TableNumber"></span>
        </div>
        <div>
            <label asp-for="Capacity" class="form-label mt-2"></label><br/>
            <input asp-for="Capacity" class="form-text mt-2"/>
            <span asp-validation-for="Capacity"></span>
        </div>

        <div>
            <button type="submit" class="btn btn-primary mt-2">OK</button>
            <button type="reset" class="btn btn-secondary mt-2">Cancel</button>
        </div>

    </form>
</main>
