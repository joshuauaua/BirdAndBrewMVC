@model BirdAndBrewMVC.Models.Table

<table class="table mt-4">
    <thead>
    <tr>  
        <th>
            Id
        </th>
        <th>
            Table Number
        </th>
        <th>
            Capacity
        </th>
    </tr>
    </thead>

    <tbody>
    
    <tr>
        <td>
            @Model.Id
        </td>
        <td>
            @Model.TableNumber
        </td>
        <td>
            @Model.Capacity
        </td>
    </tr>
    
    <tr>
        <div>
            <form method="post" asp-controller="AdminTables" asp-action="DeletePost">
                <input type="hidden" asp-for="Id" name="id" />
                
                <H4>Are you sure you want to delete this table? This action cannot be undone</H4>
                <button type="submit" class="btn btn-primary mt-2">Delete</button>
                <a asp-controller="AdminTables" asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
            </form>
        </div>
    </tr>


    </tbody>

</table>