<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BirdAndBrewMVC</title>
    

    <!-- SEO Meta Tags -->
    <meta name="description" content="@(ViewData["Description"] ?? "Bird & Brew serves delicious chicken sandwiches and craft beer in a cozy atmosphere.")">
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "chicken sandwich, craft beer, Bird & Brew, restaurant, booking")">
    <meta name="author" content="Bird & Brew" />

    <!-- Open Graph for social media -->
    <meta property="og:title" content="@(ViewData["OgTitle"] ?? "Bird & Brew - Comfort Food & Craft Beer")">
    <meta property="og:description" content="@(ViewData["OgDescription"] ?? "Join us at Bird & Brew for amazing chicken sandwiches and fresh local craft beer.")">
    <meta property="og:image" content="@Url.Content("~/social-preview.svg")">
    <meta property="og:url" content="@Context.Request.Scheme://@Context.Request.Host@Context.Request.Path">
    <meta property="og:type" content="website">

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="@(ViewData["TwitterTitle"] ?? "Bird & Brew - Comfort Food & Craft Beer")">
    <meta name="twitter:description" content="@(ViewData["TwitterDescription"] ?? "Join us at Bird & Brew for amazing chicken sandwiches and local craft beer.")">
    <meta name="twitter:image" content="@Url.Content("~/social-preview.svg")">
    
    
    
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/BirdAndBrewMVC.styles.css" asp-append-version="true"/>
    
</head>
<body>


<nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <div class="container-fluid">

        <!-- Left: Logo -->
        <a class="navbar-brand" href="@Url.Action("Index", "Home")">Bird & Brew</a>

        <!-- Hamburger Toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Center: Nav Links -->
        <div class="collapse navbar-collapse justify-content-left" id="mainNavbar">
            <ul class="navbar-nav gap-3">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "MenuItems")">Our Menu</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Bookings")">Book a Table</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">Our Story</a></li>
            </ul>
        </div>

        <!-- Right: Auth Section -->
        <div class="d-flex align-items-center">
            @if (User?.Identity?.IsAuthenticated == true)
            {
            <span class="me-3 text-white">
                    👤 @User.FindFirst("email")?.Value
                </span>
            <span class="me-3 text-white">
                    @User.FindFirst("unique_name")?.Value | @User.FindFirst("role")?.Value
                </span>

            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-light">
                    Logout
                </button>
            </form>
            }
            else
            {
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light">
                <i class="bi bi-box-arrow-right"></i> Login
            </a>
            }
        </div>

    </div>
</nav>


<main role="main" class="pb-3">
    @RenderBody()
</main>


<footer class="py-3 bg-dark px-3 ">
    <p class="text-center text-body-secondary text-white">© Bird & Brew 2025</p>

    <ul class="nav justify-content-center border-top pb-3 mb-3">
        <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link text-white">Home</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="About" class="nav-link text-white">Our Story</a></li>
        <li class="nav-item"><a asp-controller="MenuItems" asp-action="Index" class="nav-link text-white">Our Menu</a></li>
        <li class="nav-item"><a asp-controller="Bookings" asp-action="Index" class="nav-link text-white">Book a Table</a></li>
        <li class="nav-item"><a asp-controller="Home" asp-action="Privacy" class="nav-link text-white">Privacy</a></li>
        <li class="nav-item"><a asp-controller="Admin" asp-action="Dashboard" class="nav-link text-white">Administrator</a></li>
    </ul>
</footer>


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

